<Page x:Class="WPF_MVVM_Binding.BasicBinding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Binding"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BasicBinding">

    <StackPanel>
        <Slider Margin="10" Maximum="100" Value="10" x:Name="slider"/>
        <ProgressBar Margin="10" Value="{Binding Value, ElementName=slider}"/>
        <TextBox Margin="10" Text="{Binding Value, ElementName=slider}"/>
    </StackPanel>
</Page>
