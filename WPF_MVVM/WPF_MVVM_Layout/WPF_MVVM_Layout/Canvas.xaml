<Page x:Class="WPF_MVVM_Layout.Canvas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Layout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Canvas">

    <!-- 위치를 사용하여 Control을 배치할 수 있는 Layout -->
    <Canvas Margin="20">
        <Button Width="50" Height="50" FontSize="20"
                Canvas.Top="0" Canvas.Left="0" Content="A"/>
        <Button Width="50" Height="50" FontSize="20" 
                Canvas.Top="100" Canvas.Left="0" Content="B"/>
        <Button Width="50" Height="50" FontSize="20"
                Canvas.Top="100" Canvas.Left="100" Content="C"/>
        <Button Width="50" Height="50" FontSize="20"
                Canvas.Top="0" Canvas.Left="200" Content="D"/>
    </Canvas>
</Page>
