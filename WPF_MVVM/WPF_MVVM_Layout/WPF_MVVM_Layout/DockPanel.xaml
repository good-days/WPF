<Page x:Class="WPF_MVVM_Layout.DockPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Layout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DockPanel">
    <!-- 상하좌우의 영역을 구분할 수 있는 Layout -->
    <DockPanel>
        <Button DockPanel.Dock="Left" FontSize="20" Content="Left"/>
        <Button DockPanel.Dock="Right" FontSize="20" Content="Right"/>
        <Button DockPanel.Dock="Top" FontSize="20" Content="Top"/>
        <Button DockPanel.Dock="Bottom" FontSize="20" Content="Bottom"/>
        <Button FontSize="20" Content="Takes what's left"/>
    </DockPanel>
</Page>
