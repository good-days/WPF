<Page x:Class="WPF_MVVM_Layout.StackPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Layout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StackPanel">

    <!-- 원하는 방향으로 Control들을 쌓아 보여주는 Layout -->
    <StackPanel Name="stack" Orientation="Vertical">
        <Button FontSize="20">A</Button>
        <Button FontSize="20">B</Button>
        <Button FontSize="20">C</Button>
        <Button FontSize="20">D</Button>
        <Button FontSize="20" Click="Chage_Button_Click">Change</Button>
    </StackPanel>

</Page>
