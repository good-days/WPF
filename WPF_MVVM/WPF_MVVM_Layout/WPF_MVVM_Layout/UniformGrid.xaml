<Page x:Class="WPF_MVVM_Layout.UniformGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Layout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UniformGrid">

    <!-- 따로 Row, Column을 지정하지 않아도 자동적으로 Grid Layout 형태로 맞춰줌-->
    <UniformGrid>
        <Label FontSize="20" HorizontalAlignment="Center"
               VerticalAlignment="Center" Content="Name"/>
        <TextBox Width="70"/>
        <Label FontSize="20" HorizontalAlignment="Center"
               VerticalAlignment="Center" Content="Age"/>
        <ComboBox/>
    </UniformGrid>
</Page>
