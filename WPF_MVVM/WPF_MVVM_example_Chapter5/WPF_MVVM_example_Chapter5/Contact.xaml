<Page x:Class="WPF_MVVM_example_Chapter5.Contact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_example_Chapter5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource background}"
      Title="Contact">
      <!-- App.xaml에 정의한 background resource를 페이지 background로 적용 -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" VerticalAlignment="Center"
                   HorizontalAlignment="Center" Text="Sender"/>
        <TextBlock Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,0"
                   HorizontalAlignment="Center" Text="Message"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="10,15,10,15" />
        <TextBox Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" />
    </Grid>
</Page>
