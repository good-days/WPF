<Application x:Class="WPF_MVVM_example_Chapter5.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MVVM_example_Chapter5"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- example 5.5 background color 설정 -->
        <!-- Background Color 설정을 위한 Resource 정의 -->
        <LinearGradientBrush x:Key="background">
            <GradientStop Color="#FFDBFFE7" Offset="0"/>
            <GradientStop Color="#FF03882D" Offset="1"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
