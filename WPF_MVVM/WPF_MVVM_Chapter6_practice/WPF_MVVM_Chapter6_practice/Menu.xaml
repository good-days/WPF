<Page x:Class="WPF_MVVM_Chapter6_practice.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM_Chapter6_practice"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0"  Margin="60" 
                Click="Menu_Button_Click" >
            <TextBlock Text="Currency Converter1" TextWrapping="Wrap"/>
        </Button>
        <Button Grid.Row="0" Grid.Column="1"  Margin="60" 
                Click="Menu_Button_Click" >
            <TextBlock Text="Currency Converter2" TextWrapping="Wrap"/>
        </Button>
    </Grid>
